<%= form_for @categoria, remote: true do |f| %>
  <div class="form-group">
    <h4 class="control-label">Datos de la categoria:</h4>
  </div>

  <div class="item form-group<%=@categoria.errors[:nombre].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :nombre, "Nombre de la categoria: " %>
    <div class="input-group">
      <%= f.text_field :nombre, {:class=> "form-control", :placeholder=>"Introduzca el nombre de la categoria"} %>
      <% if @categoria.errors[:nombre].any? %>
        <p class="bg-danger"><%= @categoria.error[:nombre].to_s[/\w(["]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="item form-group<%=@categoria.errors[:descripcion].any? ? ' has-error has-feedback' : '' %>">
    <%= f.label :descripcion, "Descripcion de la categoria: " %>
    <div class="input-group">
      <%= f.text_field :descripcion, {:class=> "form-control", :placeholder=>"Introduzca la descripcion de la categoria"} %>
      <% if @categoria.errors[:descripcion].any? %>
        <p class="bg-danger"><%= @categoria.error[:descripcion].to_s[/\w(["]*)/] %></p>
      <% end %>
    </div>
  </div>

  <div class="actions col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
    <%= f.submit @categoria.new_record? ? "Crear categoria" : "Actualizar categoria", :class => "btn btn-success"%>
  </div>
<% end %>
